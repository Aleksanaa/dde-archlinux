pkgname=deepin-calendar
pkgver=5.10.0
pkgrel=1
pkgdesc='Calendar for Deepin Desktop Environment'
arch=('x86_64')
url="https://github.com/linuxdeepin/dde-calendar"
license=('GPL3')
depends=('deepin-qt5integration' 'dtkwidget' 'hicolor-icon-theme')
makedepends=('cmake' 'ninja' 'qt5-tools')
groups=('deepin')
source=("https://github.com/linuxdeepin/dde-calendar/archive/refs/tags/$pkgver.tar.gz")
sha512sums=('76a2a54f039f1b60369dfa75f33dbed7e1528e73570e3be7e2b606dd108e3385780d684b70e9ad95eac17c50861ed7b9d13f8e7ea2d15900f8b997fa6f1bd37a')

build() {
  cd dde-calendar-$pkgver
  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr .
  ninja
}

package() {
  cd dde-calendar-$pkgver
  DESTDIR="$pkgdir" ninja install
}
